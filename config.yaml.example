# Arcade Configuration Template
# Copy this file to config.yaml and modify as needed

server:
  address: ":8080"
  readTimeout: 30s
  writeTimeout: 30s
  shutdownTimeout: 10s

database:
  type: "sqlite"
  sqlitePath: "./arcade.db"
  # postgresConnStr: "postgres://user:pass@localhost/arcade"

events:
  type: "memory"
  bufferSize: 1000
  # redisURL: "redis://localhost:6379"

teranode:
  baseURL: "https://teranode.example.com/api/v1"
  # baseURLs: []  # For multiple endpoints
  timeout: 30s

p2p:
  processName: "arcade"
  port: 9999
  # bootstrapPeers: []
  # privateKey: ""
  network: "main"  # Options: main, test, stn, teratestnet
  peerCacheFile: "peer_cache.json"

validator:
  maxTxSize: 4294967296  # 4 GB
  maxScriptSize: 500000
  maxSigOps: 4294967295
  minFeePerKB: 50

rebroadcaster:
  frequentInterval: 1m
  frequentMinAge: 30s
  frequentMaxRetries: 20
  blockBasedMaxRetries: 100
  batchSize: 100

auth:
  enabled: false
  # token: "your-auth-token"

webhook:
  pruneInterval: 1h
  maxAge: 24h
  maxRetries: 10
