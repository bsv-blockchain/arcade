{
  "name": "@bsv-blockchain/arcade-client",
  "version": "0.1.0",
  "description": "TypeScript client for the Arcade transaction broadcast service",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "test": "echo \"No tests yet\""
  },
  "keywords": [
    "bsv",
    "bitcoin",
    "arcade",
    "transaction",
    "broadcast"
  ],
  "author": "BSV Blockchain",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsv-blockchain/arcade.git",
    "directory": "arcade-ts-client"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
